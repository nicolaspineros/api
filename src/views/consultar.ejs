<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Consultar Bonos</title>
</head>
<body>

    <div class="container p-4">
        <div class="row">
            <% bonos.forEach(function(bonos) { %>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header">
                            <%= bonos.id %>
                        </div>
                        <div class="card-body">
                            <ul>
                                <li><%= bonos.name %></li>
                                <li><%= bonos.description %></li>
                                <li><%= bonos.product_id %></li>
                                <li><%= bonos.valid_since %></li>
                                <li><%= bonos.valid_until %></li>
                            </ul>                                                            
                        </div>        
                    </div>
                </div>
            <% }) %>             
        </div>
    </div>

</body>
</html>