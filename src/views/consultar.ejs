<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Consultar Bonos</title>
</head>
<body>

    <%-include('tools/navigation') %>

    <div class="container p-4">
        <div class="row">
            <div class="col-md-4">
            <%bonos.forEach(function(bono){%>
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <%= bono.id %>                        
                    </div>
                    <div class="card-body">
                        <p><%= bono.name %></p>
                        <p><%= bono.description %></p>
                        <p><%= bono.product_id %></p>
                        <p><%= bono.valid_since %></p>
                        <p><%= bono.valid_until %></p>                                                                                                               
                    </div>        
                </div>
            <% }); %>
            </div>
        </div>
    </div>

</body>
</html>